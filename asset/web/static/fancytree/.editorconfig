# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package.json]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

; Indentation override for all JS under lib directory
;[lib/**.js]
;indent_style = space
;indent_size = 2
